<%
  form_url = url_for(controller: "users", action: "create")
  if !@resource.new_record?
    form_url = url_for(controller: "users", action: "update", id: @resource.id)
  end
%>

<%= simple_form_for(@resource, url: form_url, authenticity_token: true,
    method: @resource.new_record? ? "POST" : "PUT", remote: true, wrapper: :vertical_form,
    html: { class: "form-vertical", role: "form", }) do |f| %>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :name %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :email %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
      <%= f.input :role %>
    </div>

    <div class="col-xs-6">
      <%= f.input :salary %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <%= f.input :password %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-11 m-t-50" style="width: 95%;">
      <%= t("mandatory_fields") %>
    </div>
  </div>
<% end %>
