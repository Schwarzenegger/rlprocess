<%= render "layouts/breadcrumb", title: t('views.clients.plural'), breadcrumb_key: :clients %>

<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5><%= t("views.clients.plural") %></h5>
        <%= link_to new_client_path, class: "btn btn-xs btn-primary pull-right new-client", data: { url: new_client_path } do %>
          <%=fa(:plus)%> <%= t("views.clients.plural") %>
        <% end %>
      </div>
      <div class="ibox-content" style="padding-bottom: 10px !important;">
        <div id="clients-list" class="table-responsive" style="overflow: visible;">
          <%= render "clients" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render partial: 'layouts/crud_modal', locals: { modal_id: "client", modal_title: t('actions.add_one', model: t('activerecord.models.client').downcase) } %>
