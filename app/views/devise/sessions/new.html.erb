<div class="border-form-div loginscreen animated fadeInDown">
  <h3 class="custom-text-color text-center"><%=t('devise.sessions.login_title')%></h3>
  <h2 class="custom-text-color text-center"><%= link_to "RL".html_safe, new_user_session_path, class: "custom-text-color" %></h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "m-t", role: "form" }) do |f| %>

      <%= f.input :email, label: false, placeholder: t('activerecord.attributes.user.email'), required: false, autofocus: true, class: "form-control", type: "email" %>
      <%= f.input :password, label: false, placeholder: t('activerecord.attributes.user.password'), required: false, class: "form-control", type: "password" %>


       <div class="form-group">
          <div class="i-checks custom-text-color">
            <%= f.input :remember_me, as: :boolean, :label => false, :inline_label => t('devise.sessions.remember_me') if devise_mapping.rememberable? %>
          </div>
        </div>

    <%= f.button :submit, t('devise.sessions.sign_in'), class: "btn-primary block full-width m-b" %>

    <div class="text-center">
      <%= link_to t('devise.sessions.forgot_password'), new_password_path(resource_name) %>
    </div>
  <% end %>
</div>
