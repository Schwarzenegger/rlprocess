<%
  form_url = url_for(controller: "master_activities", action: "create")
  if !@resource.new_record?
    form_url = url_for(controller: "master_activities", action: "update", id: @resource.id)
  end
%>

<%= simple_form_for(@resource, url: form_url, authenticity_token: true,
    method: @resource.new_record? ? "POST" : "PUT", remote: true,
    wrapper: :vertical_form, html: { class: "form-vertical", role: "form", }) do |f| %>

    <div class="row">
      <div class="col-xs-12">
        <%= f.input :name %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6">
        <%= f.input :category %>
      </div>

      <div class="col-xs-6">
        <%= f.input :frequency %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-4">
        <%= f.input :deadline_year %>
      </div>

      <div class="col-xs-4">
        <%= f.input :deadline_month %>
      </div>

      <div class="col-xs-4">
        <%= f.input :deadline_day %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
        <div class="i-checks custom-text-color">

          <%= f.input :has_checkbox, as: :boolean, :label => false, :inline_label => t('activerecord.attributes.master_activity.has_checkbox') %>
        </div>

      </div>
    </div>

<% end %>
