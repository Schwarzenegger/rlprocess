<% content_for :breadcrumb do %>
  <div class="row border-bottom white-bg page-padded">
    <div class="col-md-12">
      <h2><%= title %></h2>
      <% breadcrumb breadcrumb_key %>
      <%= breadcrumbs pretext: "", separator: "", style: :ol,
                      class: "breadcrumb", current_class: "active" %>
    </div>
  </div>
<% end %>
