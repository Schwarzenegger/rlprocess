  <div class="modal-dialog">
    <div class="modal-content animated bounceInRight">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%=t('actions.close')%></span></button>
        <h4 class="modal-title"><%= modal_title %></h4>
      </div>
      <div class="modal-body" id='<%="#{modal_id}-container"%>'>
      </div>
      <div class="modal-footer">

      </div>
    </div>
  </div>
</div>
